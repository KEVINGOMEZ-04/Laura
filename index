	<script>
    function crearConfeti() {
        const colores = ['#FF0B00', '#FFB800', '#00B200', '#0072FF', '#E100B0'];

        const interval = setInterval(() => {
            const pieza = document.createElement('div');
            pieza.classList.add('pieza-confeti');
            pieza.style.backgroundColor = colores[Math.floor(Math.random() * colores.length)];
            pieza.style.left = Math.random() * 100 + 'vw';
            pieza.style.top = '0'; // Posicionar desde la parte superior
            pieza.style.animationDuration = Math.random() * 2 + 1 + 's'; // Duración aleatoria
            document.body.appendChild(pieza);

            // Eliminar la pieza de confeti después de que cae
            setTimeout(() => {
                pieza.remove();
            }, 3000); // Ajusta este tiempo si es necesario

        }, 100); // Intervalo de 300ms para crear nuevas piezas

        // Detener el confeti después de un tiempo (opcional)
        setTimeout(() => {
            clearInterval(interval);
        }, 10000); // Detener después de 10 segundos, ajusta si deseas
    }

    document.querySelector('.btn-cerrar').addEventListener('click', crearConfeti);
</script>

<style>
    .pieza-confeti {
        position: absolute;
        width: 10px;
        height: 10px;
        opacity: 0.8;
        animation-name: caer;
        animation-timing-function: ease-in;
    }

    @keyframes caer {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(100vh);
        }
    }
